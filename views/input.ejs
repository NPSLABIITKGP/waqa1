<script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
<link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet" />
<link rel="stylesheet" href="/styles/inputs.style.css">
<main class="main-input">
    <div class="container mb-1 text-center">
        <h3 class="fw-bold p-2 title">Enter Water Quality Data</h3>
    </div>
    <div class="container mb-1 text-center">
        <h5 class="fw-bold p-2 subtitle">Click on the Map to Add Location</h5>
    </div>

    <div class="container mb-3 text-center">
        <div class="instructions-section">
            <button class="accordion">Step-by-Step Instructions</button>
            <div class="panel">
                <p><strong>Step 1:</strong> Click on the map to add a marker at the desired location.</p>
                <p><strong>Step 2:</strong> Fill in the water quality data in the form fields that will appear below.</p>
                <p><strong>Step 3:</strong> Once you're done, click on the "Submit" button to send your data.</p>
            </div>
        </div>
    </div>

    <div class="container alert-message">
        <%- include("./partials/input_message.ejs") %>
    </div>
    <div id="parentsparent">
        <span id="map-popup" style="position: absolute;z-index: 1; color: #000; background-color: #fff; user-select: none;"></span>
        <!-- <div id="map1"></div> -->
        <div id="map1" data-access-token="<%= accessToken %>"></div>
        <form action="/output" method="POST" id="parent" novalidate></form>
    </div>
</main>

<script src="/scripts/input.js"></script>
<!-- <script src='https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.js'></script> -->
 <script>
    document.querySelectorAll(".accordion").forEach(button => {
        button.addEventListener("click", function() {
            this.classList.toggle("active");
            const panel = this.nextElementSibling;
            if (panel.style.display === "block") {
                panel.style.display = "none";
            } else {
                panel.style.display = "block";
            }
        });
    });
 </script>
