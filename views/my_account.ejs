<link rel="stylesheet" href="/styles/my_account.style.css">

<main class="main-account">
    <div class="account-container">
        <div class="profile-section">
            <div class="profile-card">
                <h2 class="profile-heading">Your Account</h2>
                <p><strong>Welcome, <%= userdata.name %>!</strong></p>
                <p><i class="fas fa-envelope"></i> Email: <%= userdata.email %></p>
                <p><i class="fas fa-globe"></i> Country: <%= userdata.country %></p>
                <p><i class="fas fa-phone"></i> Phone: <%= userdata.phone %></p>
                <div class="actions">
                    <a href="/update_profile" class="btn btn-primary"><i class="fas fa-user-edit"></i> Update Profile</a>
                    <a href="/change_password" class="btn btn-warning"><i class="fas fa-key"></i> Change Password</a>
                    <a href="/logout" class="btn btn-danger"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </div>
            </div>
        </div>

        <div class="activity-section">
            <h2 class="activity-heading">Your Activity</h2>
            <% if (records.length > 0) { %>
            <div class="table-container">
                <table class="activity-table">
                    <thead>
                        <tr>
                            <th>Date & Time</th>
                            <th>View</th>
                            <th>Download</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% records.forEach(record => { %>
                        <tr>
                            <td><%= new Date(record.date_time).toLocaleString() %></td>
                            <td><a href="/view_pdf/<%= record.id %>" target="_blank">View PDF</a></td>
                            <td><a href="/download_pdf/<%= record.id %>">Download</a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
            <p>No activity found.</p>
            <% } %>
        </div>
    </div>
</main>
