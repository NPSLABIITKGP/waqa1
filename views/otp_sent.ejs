<link rel="stylesheet" href="styles/auth.style.css">
<main>
    <div class="container otp-sent-container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">OTP Sent</div>
                    <div class="card-body">
                        <p>An OTP has been sent to your email: <%= email %>. Please enter it below to reset your password.</p>
                        <form action="/reset_password" method="GET">
                            <input type="hidden" name="email" value="<%= email %>">
                            <button type="submit" class="btn btn-primary btn-block">Enter OTP</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
