<link rel="stylesheet" href="/styles/reset_password.style.css">

<main class="main-reset-password">
    <div class="reset-password-container">
        <div class="reset-password-form">
            <h2 class="reset-password-heading">Reset Password</h2>

            <% if (errors.length > 0) { %>
                <div class="alert alert-danger">
                    <ul>
                        <% errors.forEach(function(error) { %>
                            <li><%= error.msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

            <form action="/reset_password" method="POST">
                <div class="form-group">
                    <label for="otp">OTP</label>
                    <input type="text" id="otp" name="otp" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="new_password">New Password</label>
                    <input type="password" id="new_password" name="new_password" class="form-control" required>
                </div>
                <input type="hidden" name="email" value="<%= email %>">
                <button type="submit" class="btn btn-reset-password">Reset Password</button>
            </form>
        </div>
        <div class="reset-info">
            <div class="reset-info-content">
                <h3 class="reset-help">Need Help?</h3>
                <p class="help-text">If you are facing any issues, feel free to contact our support team for assistance!</p>
                <button class="btn btn-help" onclick="window.location.href='/faq'">FAQ</button>
            </div>
        </div>
    </div>
</main>
